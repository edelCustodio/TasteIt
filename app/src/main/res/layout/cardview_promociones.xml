<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <mx.com.tasteit.libraries.CircularImageView
                android:id="@+id/circular_image_restaurante_logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/fuddruckers_logo"

                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nombre_restaurante"
                    android:textSize="12sp"
                    android:layout_margin="5dp"
                    android:text="@string/nombre_restaurante"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fecha_publicacion"
                    android:text="@string/fecha_publicacion"
                    android:textSize="12sp"
                    />

            </LinearLayout>


        </LinearLayout>



        <View
            android:id="@+id/list_item_seperator_profile"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="@color/light_grey"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/fuddruckers_logo"/>



        <View
            android:id="@+id/list_item_seperator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="@color/light_grey"
            android:layout_below="@+id/fecha_publicacion"/>

        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_item_seperator">

            <Button
                android:id="@+id/list_item_card_btnComentar"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:layout_weight="1"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="@string/list_item_left_button"
                android:textSize="12sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/list_item_card_btnCompartir"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:layout_weight="1"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="@string/list_item_right_button"
                android:textSize="12sp"
                android:textStyle="normal" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>